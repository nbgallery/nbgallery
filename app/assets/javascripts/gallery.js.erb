  if($("#newHomePageNotebooks").length){
    tabs = ["recent", "stars", "suggested", "mine", "all"];
    // Use the specified tab if the location hash is present and it is a valid tab
    if(window.location.hash.length && tabs.includes(window.location.hash.substring(1))){
      toggleActiveTab($(".page-home .tabs a[href="+window.location.hash+"]"));
      homepage_tab_load(window.location.hash.substring(1));
