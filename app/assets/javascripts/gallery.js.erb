  $('.revision-label-cell .edit-icon').on('click', function(e){
    e.preventDefault();
    let parentElement = $(this).parent().parent();
    parentElement.addClass('is-active');
    parentElement.find('.mouseoveredit').css("display", "none");
    parentElement.find('.revision-label-edit-form').css("display", "block");
