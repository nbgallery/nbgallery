      $('#learnMoreDropdown').css("display","block");
      $('#learnMoreDropdownAriaLabel').text('Collapse Learn More Menu')
    }
    else {
      $('#learnMoreDropdown').css("display","none");
      $('#learnMoreDropdownAriaLabel').text('Expand Learn More Menu')
    }
