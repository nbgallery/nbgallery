  /* ======================================= */
  /* ======= Home Page Functionality ======= */
  /* ======================================= */
  function toggleActiveTab(element){
    var selector = '.page-home .tabs a'
    $(selector).closest("li.tab").removeClass('active');
    $(selector).attr("aria-expanded", "false");
    element.closest("li.tab").addClass('active');
    element.attr("aria-expanded", "true");
  }
  currentTab='';
  function homepage_tab_load(tab = ''){
    currentTab=tab;
    tabs = ["recent", "stars", "suggested", "mine", "all"];
    $("#txt").css("opacity", ".5");
    $("#newHomePageNotebooks").css("opacity", ".5");
    $("wait").css("display", "block");
    loadingGif();
    tabUrl = '/home_notebooks';
    if(tab.length > 0){
      tabUrl = tabUrl + "?type=" + tab
    }
    $.ajax({
      url: tabUrl,
      success: function(data){
        $("#wait").css("display", "none");
        $("#txt").css("opacity", "1");
        $("#newHomePageNotebooks").css("opacity","1");
        if(tab == currentTab){
          history.replaceState(undefined, undefined, "#" + tab);
          $('#newHomePageNotebooks').html(data);
        }
      }
    });
    return false;
  }

  //Data for RECENT notebooks
  $("#newHomeNotebooksRecent").on("click", function(){
    toggleActiveTab($(this));
    return homepage_tab_load('recent');
  });

  //Data for STARRED notebooks
  $("#newHomeNotebooksStars").on("click", function(){
    toggleActiveTab($(this));
    return homepage_tab_load('stars');
  });

  //Data for RECOMMENDED notebooks
  $("#newHomeNotebooksRecommended").on("click", function(){
    toggleActiveTab($(this));
    return homepage_tab_load('suggested');
  });

   //Data for YOUR notebooks
  $("#newHomeNotebooksYours").on("click", function(){
    toggleActiveTab($(this));
    return homepage_tab_load('mine');
  });

  //Data for ALL notebooks
  $("#newHomeNotebooksAll").on("click", function(){
    toggleActiveTab($(this));
    return homepage_tab_load('all');
  });

