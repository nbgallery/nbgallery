  $('.revision-label-cell .btn-danger').on('click', function(e){
    e.preventDefault();
    let parentElement = $(this).parent().parent()
    parentElement.removeClass('is-active');
    parentElement.find('.mouseoveredit').css("display", "block");
    parentElement.find('.revision-label-edit-form').css("display", "none");
  });
  $('form.revision-label-edit-form').on('submit', function(e){
    e.preventDefault();
    var value = $(this).find('input').val();
    var old_value = $(this).find('input[name="old_label"]').val();
    var parentElement = $(this).parent();
    parentElement.removeClass('is-active');
    parentElement.find('.mouseoveredit').css("display", "block");
    parentElement.find('.revision-label-edit-form').css("display", "none");
    if (revisionLabelNotSame(value, old_value)){
      var url = ($(this).data("url")).split("/");
      url[2] = url[2].substring(0, url[2].indexOf('-'));
      url = url.join('/') + "/edit_friendly_label";
      data = $(this).serialize();
      $.ajax({
        method: 'PATCH',
        url: url,
        data: data,
        headers: {
          Accept: 'application/json'
        },
        success: function(response){
          if (response.message != null) {
            makeAlert('success', '' , response.message);
            parentElement.find('.mouseoveredit a:first-child').text(value);
            parentElement.parent().find('input[name="old_label"]').val(value);
          }
          else {
            // Controller will refresh page for label resets
          }
        },
        error: function(response){
          makeAlert('error', '' , 'System encountered an error when trying to save revision label. <strong>Reasoning:</strong> ' + response.responseJSON.message);
        }
      });
    }
  });

