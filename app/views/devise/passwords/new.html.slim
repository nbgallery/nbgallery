div.content-container
  div.row
    div.col-md-4.col-md-offset-4
      -if GalleryConfig.username_login_allowed == true
        h1.smaller-h1 Forgot your password?
        ==form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          ==devise_error_messages!
          .field
            ==f.label :email
            br
            ==f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address"
          .actions
            ==f.submit "Send me reset password instructions"
      -else
        div.registration-disabled-notice Logging in with Email/Password has been disabled
      ==render "devise/shared/links"
