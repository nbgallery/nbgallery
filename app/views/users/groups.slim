div.content-container
  h2 #{@viewed_user.name}'s Groups
  hr.divider
  div.row
    div.content-container
      ul.list-group
      - @groups.each do |group, _count|
        li.list-group-item.groupSearchResults
          a href="#{url_for(group)}"
            span.tooltips title="#{group.description.nil? ? 'No description provided' : group.description}" #{group.name}
            span.badge.searchResultGroup =group.notebooks.count
